{
    "name": "webpack-es6",
    "version": "1.0.0",
    "description": "A template project for es6/7, webpack2, sass",
    "main": "index.js",
    "scripts": {
        "json": "webpack --progress --config webpack.dev.config.js --json > stats.json",
        "clean:unix": "rm -rf dist",
        "clean": "rimraf dist",
        "setup": "npm run clean && npm install",
        "dll": "webpack --progress --config webpack.dll.config.js",
        "start": "webpack --progress --config webpack.dev.config.js",
        "init": "npm run clean && npm run dll && npm run start",
        "dev": "webpack-dev-server --config webpack.dev.config.js",
        "build": "webpack --progress --hide-modules --config webpack.prod.config.js",
        "eslint": "eslint src"
    },
    "repository": "git+https://github.com/eilvein/webpack2-es6.git",
    "keywords": [
        "webpack2",
        "es6",
        "eslint",
        "sass",
        "postcss"
    ],
    "author": "Eilvein",
    "license": "MIT",
    "dependencies": {
        "autoprefixer": "^7.1.1",
        "babel-core": "^6.25.0",
        "babel-eslint": "^7.2.3",
        "babel-loader": "^7.0.0",
        "babel-preset-env": "^1.5.2",
        "babel-preset-stage-2": "^6.24.1",
        "clean-webpack-plugin": "^0.1.16",
        "css-loader": "^0.28.4",
        "eslint": "^4.0.0",
        "eslint-loader": "^1.8.0",
        "eslint-plugin-node": "^5.0.0",
        "extract-text-webpack-plugin": "^2.1.2",
        "fs": "0.0.1-security",
        "html-loader": "^0.4.5",
        "html-webpack-include-assets-plugin": "0.0.5",
        "html-webpack-plugin": "^2.28.0",
        "node-sass": "^4.5.3",
        "path": "^0.12.7",
        "postcss-loader": "^2.0.6",
        "precss": "^1.4.0",
        "rimraf": "^2.6.1",
        "sass-loader": "^6.0.5",
        "style-loader": "^0.18.2",
        "url-loader": "^0.5.9",
        "webpack": "^2.6.1",
        "webpack-dev-server": "^2.4.5",
        "webpack-merge": "^4.1.0"
    },
    "devDependencies": {
        "jquery": "^3.2.1"
    }
}
